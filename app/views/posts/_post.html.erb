<div class='col-sm-6 col-lg-4'>
  <div class="card card-1">
  	<div>
  	<img class="img-responsive" src="<%= post.banner_image_url %>" alt="image">
  	</div>
    <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
      <h3 class="text-center"><%= link_to post.title, post %></h3>
      <small><p class="text-center">
        <%= post.display_day_published %> |  <%= post.user.email %>
      </p></small>
      <p><%= truncate(post.description, length: 200) %></p>
        <%= link_to 'Read more', post, class:'btn btn-primary pull-right'%>
      </div>
    </div>

      <% if user_signed_in? && current_user == post.user %>
        <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_post_path(post), class:'btn btn-primary' %>
        <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, post_path(post), method: :delete, 
        data: { confirm: "Are you sure you want to delete this post?" }, 
        class: "btn btn-danger btn-space" %>
      <% end %>

  </div>
</div>
</div>

